<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %} Mon Coin!{% endblock %}</title>
         
        {% block stylesheets %}
         <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
         <link rel="stylesheet" href="{{ asset('dist/css/styles.css') }}" />
        {% endblock %}
    </head>
    
    <body>
     
        <nav class="navbar navbar-expand-lg navbar-light"  style="background-color: #e3f2fd;">
                        <a class="navbar-brand" href="{{path('app_login')}}">
                        <img src="{{asset('images/logo/moncoin.png')}}"></a>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
               <ul class="navbar-nav mr-auto">
                         <a class="nav-link" href="{{path('mon_coin')}}">Accueil <span class="sr-only">(current)</span></a>
                    <li class="nav-item active">
                    </a>
                    </li>
                 <li class="nav-item">
                          <a class="nav-link" href="{{path('mon_coin_add')}}">Vendre</a>
                 </li>
                 
                {% if app.user %}
                 <li class="nav-item">
                        <a class="nav-link" href="{{path('app_logout')}}">Se deconnecter</a></li>

                  <li class ="nav-item">
                  <img src="{{asset('images/userPictures/') ~ app.user.picture ?? 'default.png'}}" alt="user picture"></li>                
                  
                 {% endif %}
                {% if not app.user %}
                  <li class="nav-item">
                         <a class="nav-link" href="{{path('app_register')}}">S'inscrire</a></li>
                   <li class="nav-item">
                         <a class="nav-link" href="{{path('app_login')}}">Se connecter</a></li>
                
            </ul>
            {% endif %}

           {% if is_granted('ROLE_ADMIN')%}
            <li class="nav-item">
            <a class="nav-link" href="{{path('easyadmin')}}">Administration</a></li>
            {% endif %}
           </nav>
 
        {% block body %}{% endblock %}
        {% block javascripts %}{% endblock %}
    </body>
</html>
